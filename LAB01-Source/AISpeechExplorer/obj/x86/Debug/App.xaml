<Application
    x:Class="AISpeechExplorer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AISpeechExplorer"
    xmlns:common="using:AISpeechExplorer.Common"
    RequestedTheme="Light">

    <Application.Resources>

        <ResourceDictionary>

            <Color x:Key="AppMainTransparentColor">#CC000000</Color>
            <SolidColorBrush x:Key="AppMainTransparentBrush" Color="{ThemeResource AppMainTransparentColor}"/>

            <Color x:Key="AppMainGreyColor">#FF999999</Color>
            <SolidColorBrush x:Key="AppMainGreyBrush" Color="{ThemeResource AppMainGreyColor}"/>

            <common:SpeechLanguageLabelConverter x:Key="SpeechLanguageLabelConverter"/>
            <common:BooleanToDisabledConverter x:Key="BooleanToDisabledConverter"/>
            <common:HasContextToVisibilityConverter x:Key="HasContextToVisibilityConverter"/>
            <common:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <common:IsVerifiedForegroundConverter x:Key="IsVerifiedForegroundConverter"/>
            
        </ResourceDictionary>
    </Application.Resources>

</Application>

